{
    "manifest_version": 2,
    "name": "Insta-petty",
    "version": "0.0.6",
    "description": "Track followers and following for Instagram",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "cookies",
        "storage",
        "tabs",
        "https://*.instagram.com/*"
    ],
    "background": {
        "scripts": [
            "background-script.js"
        ],
        "persistent": false,
        "type": "module"
    },
    "browser_action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "Insta-petty"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "insta-petty@insta-petty",
            "strict_min_version": "140.0",
            "data_collection_permissions": {
                "required": [
                    "none"
                ],
                "optional": []
            }
        },
        "gecko_android": {
            "id": "insta-petty@insta-petty",
            "strict_min_version": "142.0",
            "data_collection_permissions": {
                "required": [
                    "none"
                ],
                "optional": []
            }
        }
    }
}
