{
  "type": "module",
  "scripts": {
    "build": "npm run build:ts && npm run build:assets && npm run lint:webext",
    "build:ts": "eslint src/*.ts && esbuild --bundle --target=chrome89,firefox89 --format=esm --outdir=dist src/background-script.ts src/page.ts",
    "build:assets": "cp -r assets/* dist/",
    "lint:webext": "web-ext lint --source-dir dist",
    "package": "npm run build && web-ext sign --source-dir dist --channel unlisted && mv web-ext-artifacts/*.xpi insta-petty-`jq -r .version < ./assets/manifest.json`.xpi"
  },
  "devDependencies": {
    "@eslint/css": "^0.14.1",
    "@types/firefox-webext-browser": "^143.0.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "jiti": "^2.6.1",
    "typescript-eslint": "^8.50.0",
    "web-ext": "^9.2.0"
  },
  "dependencies": {
    "chart.js": "^4.5.1",
    "idb": "^8.0.3",
    "pretty-ms": "^9.3.0"
  }
}
